<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context=".LoginScreen">

    <RelativeLayout
        android:id="@+id/child_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:src="@drawable/one_sombra_personaje"
            android:id="@+id/sombraimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:src="@drawable/one_prota"
            android:id="@+id/protaimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/logoimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_above="@+id/sombraimg"
            android:layout_alignParentStart="true" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/child_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:src="@drawable/one_marco_derecho"
            android:id="@+id/marcoderechoimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:textSize="80sp"
                    android:textColor="@android:color/white"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="40sp"
                    android:background="@drawable/edittext"
                    android:hint="USER"
                    android:gravity="center"
                    android:id="@+id/UserEt"
                    android:layout_alignParentTop="true">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="40sp"
                    android:background="@drawable/edittext"
                    android:hint="EMAIL"
                    android:gravity="center"
                    android:id="@+id/EmailEt"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Pass2"
                    android:layout_alignParentLeft="true">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="40sp"
                    android:background="@drawable/edittext"
                    android:hint="PASS"
                    android:gravity="center"
                    android:id="@+id/Pass1"
                    android:layout_below="@+id/UserEt"
                    android:layout_alignParentStart="true"
                    android:password="true">
            </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="40sp"
                    android:background="@drawable/edittext"
                    android:hint="REPEAT PASS"
                    android:gravity="center"
                    android:id="@+id/Pass2"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Pass1"
                    android:layout_alignParentLeft="true"
                    android:password="true">
                </EditText>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="40sp"
                    android:background="@drawable/buttonregister"
                    android:textColor="@android:color/white"
                    android:text="SIGN UP"
                    android:id="@+id/Registerbtn"
                    android:gravity="center"
                    android:layout_alignParentTop="true">
                </Button>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/child_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="10dp">

    </RelativeLayout>



</LinearLayout>