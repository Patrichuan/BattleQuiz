<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context=".LoginScreen">

    <RelativeLayout
        android:id="@+id/child_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:src="@drawable/sombrapersonaje"
            android:id="@+id/sombraimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:src="@drawable/prota"
            android:id="@+id/protaimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/logoimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_above="@+id/sombraimg"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/ghost_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/buttonmenu"
                android:textColor="@android:color/white"
                android:text="SUDEN DEATH"
                android:id="@+id/SudenDeathbtn"
                android:gravity="center"
                android:layout_below="@+id/PassEt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/buttonmenu"
                android:textColor="@android:color/white"
                android:text="CLASSIC MODE"
                android:id="@+id/ClassiModebtn"
                android:gravity="center"
                android:layout_below="@+id/PassEt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:background="@drawable/buttonmenu"
                android:textColor="@android:color/white"
                android:text="LEADER BOARDS"
                android:id="@+id/LeaderBoardbtn"
                android:gravity="center"
                android:layout_below="@+id/PassEt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
