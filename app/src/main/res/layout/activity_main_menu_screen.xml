<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="@drawable/background"
    tools:context=".MainMenuScreen">

    <RelativeLayout
        android:id="@+id/child_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:src="@drawable/sombrapersonaje"
            android:id="@+id/sombraimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:src="@drawable/prota"
            android:id="@+id/protaimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/logoimg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_above="@+id/sombraimg"
            android:layout_alignParentEnd="true" />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingTop="100dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:orientation="vertical"
        android:weightSum="1">


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="@drawable/buttonmenu"
            android:textColor="@android:color/white"
            android:text="SOLO MODE"
            android:id="@+id/SoloModebtn"
            android:gravity="center"
            android:layout_below="@+id/PassEt"
            android:layout_alignParentStart="true">
        </Button>
        <TextView
            android:id="@+id/Ghostbtn1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="@drawable/buttonmenu"
            android:textColor="@android:color/white"
            android:text="MULTIPLAYER"
            android:id="@+id/Multiplayerbtn"
            android:gravity="center"
            android:layout_below="@+id/PassEt"
            android:layout_alignParentStart="true">
        </Button>
        <TextView
            android:id="@+id/Ghostbtn2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="@drawable/buttonmenu"
            android:textColor="@android:color/white"
            android:text="SHOP"
            android:id="@+id/Shopbtn"
            android:gravity="center"
            android:layout_below="@+id/PassEt"
            android:layout_alignParentStart="true">
        </Button>
        <TextView
            android:id="@+id/Ghostbtn3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:background="@drawable/buttonmenu"
            android:textColor="@android:color/white"
            android:text="ACHIEVEMENTS"
            android:id="@+id/Achievementsbtn"
            android:gravity="center"
            android:layout_below="@+id/PassEt"
            android:layout_alignParentStart="true">
        </Button>

    </LinearLayout>
</LinearLayout>