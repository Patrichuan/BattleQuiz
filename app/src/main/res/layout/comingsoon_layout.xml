<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    android:background="@drawable/background"
    android:weightSum="1"
    tools:context=".LoginScreen">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/child_one"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/protaimgangry"
            android:src="@drawable/three_b_angry_quizzy"
            android:adjustViewBounds="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/logoimg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoimg"
            android:src="@drawable/logo"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        android:weightSum="1"
        android:id="@+id/bocadillo"
        android:focusableInTouchMode="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:id="@+id/ghost_up_layout"
            android:paddingBottom="@dimen/activity_vertical_margin"></RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bocadillo_layout"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:layout_weight="0.15">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coming_soon"
                android:layout_marginTop="10dp"
                android:background="@drawable/three_b_multiplayer_bocadillo" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>